@import url("https://fonts.googleapis.com/css?family=Roboto:400,300,500,700")
@import flexboxgrid
@import normalize

//REUSABLES
.center-box
	margin 0 auto
	
.center-text
	text-align center
	
.no-margin
	margin 0

body
	background-color #fff
	color #1d1d1d
	font-family "Roboto", "Arial", sans-serif
	width 100%
	
	a
		text-decoration none
		color #34a1bc

	h1
		margin 0
		
	h3
		font-size 1.6rem
		
	img
		max-width 100%
		
	ul
		padding-left 0
		
.form__control
	margin-top 1rem
	
	label
		display block
		font-weight 700
		margin-bottom .2rem
		
	input[type="text"], input[type="email"], input[type="tel"]
		display block
		width 100%
		-webkit-appearance none
		-moz-appearance none
		appearance none
		background #eff2e7
		border 1px solid gray
		-webkit-border-radius 5px
		border-radius 5px
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		box-sizing border-box
		color gray
		font-size 21px
		height 50px
		outline 0
		padding 0 15px
		
	textarea
		display block
		width 100%
		outline 0
		padding 15px 15px
		-webkit-appearance none
		-moz-appearance none
		appearance none
		background #eff2e7
		border 1px solid gray
		-webkit-border-radius 5px
		border-radius 5px
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		box-sizing border-box
		color gray
		
	&:first-child
		margin-top 0
		
.btn
	background-color #d3d3d3
	border none
	-webkit-border-radius .4em
	border-radius .4em
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	color #fff
	cursor pointer
	display inline-block	
	font-size .95em
	font-weight 700
	padding .6em .8em .8em
	text-decoration none
	-moz-user-select none
	-ms-user-select none
	-webkit-tap-highlight-color transparent
	-webkit-user-select none
	user-select none
	-webkit-transition .2s
	-moz-transition .2s
	-o-transition .2s
	-ms-transition .2s
	transition .2s
	vertical-align middle
	-webkit-box-shadow inset 0 -.2em rgba(0,0,0,.3)
	box-shadow inset 0 -.2em rgba(0,0,0,.3)
	white-space nowrap
	overflow hidden
	-o-text-overflow ellipsis
	text-overflow ellipsis
	-webkit-appearance none
	-moz-appearance none
	appearance none
	
	&-big
		font-size 1.3rem
		
	&-green
		background-color #7dcd40
		
		&:focus, &:hover
			background #579527
    	color #fff

.header
	background-color lighten(#1d1d1d, 92%)


.banner
	background-color lighten(#1d1d1d, 92%)

	.navbar
		text-align center
		
		ul
			li
				display inline-block
				margin-right 2rem
				
				&:last-child
					margin-right 0

				a
					color lighten(#1d1d1d, 10%)
					text-transform uppercase
					font-weight 500
					font-size 1.1rem
					transition 1s
					
					&:hover
						color #80829a

.content
	&__banner
		margin-top 2rem

	.container
		&--title
			margin-top 3rem
			margin-bottom 3rem

.features
	&__item
		p
			text-align left
			
		&--p
			margin-top 1.2rem
			
			strong
				text-align left	
			p
				margin 0
				
			&:first-child
				margin-top 0


.services
	&__item
		margin-top 2rem
		border-top 1px solid lighten(#1d1d1d, 80%)
		padding-top 1rem
		
		h2
			margin-top 0
			
.contact
	&__container
		article
			padding 0

.footer
	background-color #1F87A0
	height 120px
	color #fff
	margin-top 2rem
	
	&__column
		p
			margin 0
			
		a
			color darken(#fff, 10%)
			transition all .2s ease-in-out
			
			&:hover
				transform scale(1.1)